  <version>1.0-SNAPSHOT</version>
  <name>ShoppingWeb Maven Webapp</name>
  <url>http://maven.apache.org</url>
  
  <properties>
  	<tomcat_url>http://localhost:9090/manager/text</tomcat_url>
  </properties>
